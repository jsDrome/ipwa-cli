{
  "name": "@jsdrome/ipwa",
  "version": "3.2.0",
  "author": "Sreeram Padmanabhan",
  "license": "ISC",
  "description": "ðŸ”¥ Isomorphic progressive web native cloud monorepo generator.",
  "homepage": "https://github.com/jsDrome/ipwa#readme",
  "main": "cli.js",
  "scripts": {
    "release": "release-it --no-npm.publish",
    "version": "echo $npm_package_version"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "ora": "^4.0.3"
  },
  "devDependencies": {
    "release-it": "^13.5.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsDrome/ipwa.git"
  },
  "keywords": [
    "mentor",
    "driven",
    "open",
    "source",
    "transformation"
  ],
  "bugs": {
    "url": "https://github.com/jsDrome/ipwa/issues"
  },
  "release-it": {
    "git": {
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${latestTag}...HEAD",
      "requireCleanWorkingDir": false,
      "requireUpstream": true,
      "requireCommits": false,
      "addUntrackedFiles": false,
      "commit": true,
      "commitMessage": "release: ${version}",
      "commitArgs": "",
      "tag": true,
      "tagName": "v${version}",
      "tagAnnotation": "Release ${version}",
      "tagArgs": "",
      "push": true,
      "pushArgs": "--follow-tags",
      "pushRepo": "origin"
    },
    "hooks": {
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "bin": {
    "ipwa": "./cli.js"
  },
  "files": [
    "cli.js"
  ]
}
