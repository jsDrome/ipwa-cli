{
  "name": "jsdrome",
  "version": "1.0.0",
  "author": "Sreeram Padmanabhan",
  "license": "ISC",
  "description": "Mentor driven open source transformation",
  "homepage": "https://github.com/jsDrome/jsdrome#readme",
  "main": "index.js",
  "scripts": {
    "build:client:dev": "webpack --env=client.dev --config=build",
    "build:client:dev:watch": "webpack --env=client.dev --config=build --watch",
    "build:client:devserver": "webpack-dev-server --env=client.dev --config=build",
    "build:client:prod": "webpack --env=client.prod --config=build",
    "build:client:prod:watch": "webpack --env=client.prod --config=build --watch",
    "build:server:dev": "webpack --env=server.dev --config=build",
    "build:server:dev:watch": "webpack --env=server.dev --config=build --watch",
    "build:server:prod": "webpack --env=server.prod --config=build",
    "build:server:prod:watch": "webpack --env=server.prod --config=build --watch",
    "build:server:firebase": "webpack --env=server.firebase --config=build",
    "build:docker": "docker-compose -f infra/docker/docker-compose.yml up --build",
    "build:helm": "helm install $PROJECT_NAME infra/helm",
    "uninstall:helm": "helm uninstall $PROJECT_NAME",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:codecov": "codecov -t $CODECOV_TOKEN",
    "test:cypress:open": "cypress open --config-file=regression/cypress/cypress.json",
    "test:cypress:run": "cypress run --config-file=regression/cypress/cypress.json --record --key $CYPRESS_TOKEN",
    "test:puppeteer": "node regression/puppeteer/",
    "test:percy": "percy exec -- node regression/percy/",
    "test:scripts": "sh ./scripts/test-scripts.sh",
    "firebase:serve": "firebase serve",
    "firebase:shell": "firebase functions:shell",
    "firebase:start": "npm run shell",
    "firebase:logs": "firebase functions:log",
    "firebase:deploy": "firebase deploy --token $FIREBASE_TOKEN",
    "lint": "eslint .",
    "start": "cd _dist && node .",
    "dev": "concurrently --kill-others \"npm run build:client:dev:watch\" \"npm run build:server:dev:watch\" -n client,server -c blue,yellow",
    "nodemon": "cd _dist && nodemon index.js --watch _dist/index.js",
    "clean": "rimraf ./*.log _dist coverage .firebase"
  },
  "dependencies": {
    "express": "^4.17.1",
    "firebase-admin": "^8.9.2",
    "firebase-functions": "^3.3.0",
    "rc": "^1.2.8",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "codecov": "^3.6.5",
    "concurrently": "^5.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^6.8.0",
    "eslint-plugin-cypress": "^2.10.1",
    "eslint-plugin-react": "^7.18.0",
    "esm": "^3.2.25",
    "firebase-tools": "^7.13.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "optionalDependencies": {
    "@percy/script": "^1.0.3",
    "cypress": "^4.0.2",
    "puppeteer": "^2.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsDrome/jsdrome.git"
  },
  "keywords": [
    "mentor",
    "driven",
    "open",
    "source",
    "transformation"
  ],
  "bugs": {
    "url": "https://github.com/jsDrome/jsdrome/issues"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": {
            "chrome": "41",
            "ie": "10"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "jasmine": true,
      "jest": true,
      "cypress/globals": true
    },
    "rules": {
      "react/prop-types": 0,
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxEOF": 1
        }
      ],
      "no-extra-parens": [
        "error",
        "all",
        {
          "nestedBinaryExpressions": false
        }
      ],
      "eqeqeq": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "block-scoped-var": "error",
      "no-alert": "error",
      "no-else-return": "error",
      "no-empty-function": "error",
      "no-empty-pattern": "error",
      "no-magic-numbers": "error",
      "no-multi-spaces": "error",
      "global-require": "error",
      "handle-callback-err": "error",
      "no-mixed-requires": "error",
      "array-bracket-spacing": [
        "error",
        "always"
      ],
      "block-spacing": "error",
      "camelcase": "error",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "comma-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "implicit-arrow-linebreak": [
        "error",
        "beside"
      ],
      "indent": [
        "error",
        2
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "react/jsx-closing-bracket-location": [
        "error",
        "after-props"
      ],
      "eol-last": [
        "error",
        "always"
      ]
    },
    "settings": {
      "react": {
        "version": "16.0"
      }
    },
    "plugins": [
      "cypress"
    ]
  },
  "eslintIgnore": [
    "_dist",
    "coverage"
  ],
  "jest": {
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "modulePathIgnorePatterns": [
      "cypress",
      "puppeteer"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run clean && npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": "8"
  }
}
